<Window x:Class="BattleShip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BattleShip"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="550">
    <Grid>
        <Button x:Name="button" Content="START GAME" HorizontalAlignment="Center" Height="140" Margin="0,10,0,0" VerticalAlignment="Top" Width="500" FontSize="36" FontFamily="Showcard Gothic" BorderBrush="Red" Foreground="#FF360505" Click="button_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FF000CFF" Offset="0"/>
                    <GradientStop Color="#FF29FF07" Offset="0.993"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="button1" Content="EXIT" HorizontalAlignment="Center" Height="80" Margin="0,204,0,36" VerticalAlignment="Top" Width="400" Foreground="Black" Background="#FF9B9B9B" FontSize="22" FontFamily="Segoe Print" FontWeight="Bold" Click="button1_Click"/>

    </Grid>
</Window>
